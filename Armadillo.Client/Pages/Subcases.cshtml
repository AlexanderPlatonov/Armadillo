@using Armadillo.Shared
@page "/subcases"
@inject HttpClient Http

<h1>Subcases</h1>

@if (subcases == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Customer</th>
                <th>Owner</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subcase in subcases)
            {
                <tr>
                    <td>@subcase.Id</td>
                    <td>@subcase.Title</td>
                    <td>@subcase.Customer</td>
                    <td>@subcase.Owner</td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {
    Subcase[] subcases;

    protected override async Task OnInitAsync()
    {
        subcases = await Http.GetJsonAsync<Subcase[]>("api/subcases");
    }
}
